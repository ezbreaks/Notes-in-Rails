#statusblock
  %h3.statusTitle 
    Notes
  - @notes.each do |note|
    %p.username
      %p.userName
        = note.user.name
        Posted
        =time_ago_in_words note.created_at
      %p.text-muted=note.created_at.strftime '%b %d, %Y - %H:%M'  
    %p.status= note.status
    %p.link
    -if user_signed_in?
      = link_to 'View Link', note.link, class: 'btn btn-primary'
      = link_to 'Edit', edit_note_path(note), class: 'btn btn-primary'
      = link_to 'Destroy', note_path(note), method: :delete, data: { confirm: 'Are you sure' },  class: 'btn btn-danger'
    -else
      = link_to 'View Link', note.link, class: 'btn btn-primary'
    
    
      
     

    %p.clearfix
   
    